{
  "name": "Catbox",
  "id": "catbox",
  "version": "1.0.0",
  "description": "Shikanime's development environment",
  "options": {
    "userUid": {
      "type": "string",
      "proposals": ["1001", "automatic"],
      "default": "automatic",
      "description": "Enter UID for non-root user"
    },
    "userGid": {
      "type": "string",
      "proposals": ["1001", "automatic"],
      "default": "automatic",
      "description": "Enter GID for non-root user"
    }
  },
  "dependsOn": {
    "ghcr.io/devcontainers/features/common-utils": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/nix:1": {
      "flakeUri": "github:nix-community/home-manager/release-23.05",
      "extraNixConfig": "experimental-features = nix-command flakes,accept-flake-config = true,trusted-users = root vscode"
    }
  },
  "mounts": [
    {
      "source": "nix",
      "target": "/nix",
      "type": "volume"
    }
  ],
  "postCreateCommand": "/usr/local/share/catbox-post-create.sh"
}
